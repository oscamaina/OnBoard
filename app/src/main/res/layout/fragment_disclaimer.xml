<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="640dp"
    android:layout_gravity="center|center_horizontal|center_vertical"
    tools:context=".DisclaimerFragment">

    <TextView
        android:id="@+id/txt_disclaimer"
        android:layout_width="328dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="415dp"
        android:text="                                      Disclaimer                                                                            1. Limited to individual not companies/businesses. 2. Limited to Kenyan citizens with national ID’s and residents with alien ID’s. 3. Excludes Non-residents."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_kenya"
        android:layout_width="144dp"
        android:layout_height="16dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="239dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="385dp"
        android:text="Are you a Kenyan citizen?"
        android:textAlignment="viewStart"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/Radiogroup"
        android:layout_width="167dp"
        android:layout_height="20dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="277dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="349dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radio_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/custom_radiobutton"
            android:text="Yes" />
        <!--            android:onClick="onRadioButtonClicked"-->


        <RadioButton
            android:id="@+id/radio_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/custom_radiobutton"
            android:text="No" />
        <!--            android:onClick="onRadioButtonClicked"-->

    </RadioGroup>

    <TextView
        android:id="@+id/txt_enterID"
        android:layout_width="98dp"
        android:layout_height="16dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="306dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="318dp"
        android:text="Enter National ID"
        android:textAlignment="viewStart"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_ID"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="331dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="264dp"
        android:ems="10"
        android:hint="Nationa ID"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_DOB"
        android:layout_width="82dp"
        android:layout_height="16dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="407dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="217dp"
        android:text="Date of Birth *"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="435dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_regNext"
        android:layout_width="195dp"
        android:layout_height="45dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="495dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="100dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>



