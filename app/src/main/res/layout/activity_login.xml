<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="640dp"
    android:layout_gravity="clip_vertical|center_horizontal"
    tools:context=".Login">

    <Button
        android:id="@+id/btn_loginback"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="299dp"
        android:layout_marginBottom="580dp"
        android:background="@drawable/btn_circle_style"
        android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
        android:drawableTint="@color/gradient_start_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="327dp"
        android:layout_height="356dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="194dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </androidx.viewpager.widget.ViewPager>

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="116dp"
        android:layout_height="58dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="492dp"
        android:text="Login"
        android:textSize="44dp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_username"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="414dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="National ID/PIN"
        android:textColorHint="@color/intro_description_color"
        android:textAlignment="viewStart"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="327dp"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="@color/intro_description_color"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_forgot"
        android:layout_width="240dp"
        android:layout_height="20dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="338dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="282dp"
        android:text="Forgot Password? Click here to reset"
        android:textAlignment="viewStart"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="389dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="206dp"
        android:text="login"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_pinregister"
        android:layout_width="204dp"
        android:layout_height="22dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="486dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="137dp"
        android:text="Register to get a KRA PIN"
        android:textAlignment="viewStart"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="525dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="70dp"
        android:text="Register"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>