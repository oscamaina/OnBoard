<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="640dp"
    android:layout_gravity="center_horizontal|center_vertical"
    tools:context=".Registration">

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="360dp"
        android:layout_height="852dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_regbackCard2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="299dp"
            android:layout_marginBottom="580dp"
            android:background="@drawable/btn_circle_style"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:drawableTint="@color/gradient_start_color" />

        <TextView
            android:id="@+id/txt_regCard2"
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="475dp"
            android:text="Registration"
            android:textAlignment="center"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="328dp"
            android:layout_height="120dp"
            android:text="TextView" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="360dp"
        android:layout_height="640dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_disclaimer"
            android:layout_width="328dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="105dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="415dp"
            android:text="                                      Disclaimer                                                                            1. Limited to individual not companies/businesses. 2. Limited to Kenyan citizens with national ID’s and residents with alien ID’s. 3. Excludes Non-residents." />

        <EditText
            android:id="@+id/txt_ID"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="331dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="264dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_regNext"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="495dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="100dp"
            android:text="Next" />

        <TextView
            android:id="@+id/txt_enterID"
            android:layout_width="98dp"
            android:layout_height="16dp"
            android:layout_marginStart="131dp"
            android:layout_marginTop="306dp"
            android:layout_marginEnd="131dp"
            android:layout_marginBottom="318dp"
            android:text="Enter National ID"
            android:textAlignment="viewStart"
            android:textSize="12dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rdb_no"
            android:layout_width="125dp"
            android:layout_height="23dp"
            android:layout_marginStart="201dp"
            android:layout_marginTop="277dp"
            android:layout_marginEnd="145dp"
            android:layout_marginBottom="349dp"
            android:text="No" />

        <TextView
            android:id="@+id/txt_reg"
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="475dp"
            android:text="Registration"
            android:textAlignment="center"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_DOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="139dp"
            android:layout_marginTop="407dp"
            android:layout_marginEnd="139dp"
            android:layout_marginBottom="217dp"
            android:text="Date of Birth *"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_kenya"
            android:layout_width="144dp"
            android:layout_height="16dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="239dp"
            android:layout_marginEnd="108dp"
            android:layout_marginBottom="385dp"
            android:text="Are you a Kenyan citizen?"
            android:textAlignment="viewStart"
            android:textSize="12dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rdb_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="114dp"
            android:layout_marginTop="277dp"
            android:layout_marginEnd="232dp"
            android:layout_marginBottom="349dp"
            android:text="Yes" />

        <Button
            android:id="@+id/btn_regback"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="299dp"
            android:layout_marginBottom="580dp"
            android:background="@drawable/btn_circle_style"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:drawableTint="@color/gradient_start_color" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="435dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="160dp" />

    </androidx.cardview.widget.CardView>
    <![CDATA[



    />


]]>
</androidx.constraintlayout.widget.ConstraintLayout>